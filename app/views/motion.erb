  <div class="container">
    <div class="columns">
    <div class="column is-one-quarter">
      <div class="style-element section">
        <aside class="menu">
          <p class="menu-label">
            Agenda Items
          <p>
            <div class="center-element">
              <span class="icon">  
                <i class="fa fa-plus-square"></i>
              </span>
            </div>

          <ul class="menu-list">
            <li><a href="#"> 
              <span class="icon">  
                  <i class="fa fa-briefcase"></i>
              </span>Business items on the agenda</a></li>
            <li><a href="#">
              <span class="icon">  
                  <i class="fa fa-exclamation-circle-btb"></i>
              </span>Action Item important to dos</a></li>
            <li><a href="#">
              <span class="icon">  
                  <i class="fa fa-gavel"></i>
              </span>Motion to improve things</a></li>
            <li><a href="#">
              <span class="icon">  
