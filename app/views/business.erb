<div class="style-element section ai-business">
  <div class="box">
    <h2 class="subtitle is-3">Business</h2>
    <div class="ai-title">
      <div class="control">
        <label class="label">Title</label>
        <input class="input" type="text" placeholder="{{ @business.title }}">
      </div>
    </div>
    <div class="ai-description">
      <label class="label">Description</label>
      <div class="control">
        <textarea class="textarea" placeholder="{{ @business.description }}"></textarea>
      </div>
    </div>
    <div class="ai-responsible">
      <label class="label">Presenter(s)</label>
      <input class="input" type="text" placeholder="{{ @resp_user2.user_id }}">
    </div>
