<template id="business-template">
  <div class="ai-business" v-if="agendaItem.type === 'Business'">
    <div class="ai-responsible">
      <label class="label">Presenter(s)</label>
      <input class="input" type="text" v-model="agendaItem.responsible_users" name="responsible_users">
    </div>
    <div class="ai-status">
      <label class="label">Status</label>
      <p class="control">
        <span class="select">
          <select name="status" v-model="agendaItem.status">
            <option>Select status</option>
            <option value="Active">Active</option>
            <option value="Carried Forward">Carried Forward</option>
            <option vaue="Completed">Completed</option>
          </select>
        </span>
      </p>
    </div>
  </div>
</template>

<script>
  Vue.component('business', {
    template: '#business-template',
    props: ['agendaItem'],
    data: function() {
      return {
        mover: {},
        seconder: {}
      }
    },
    created: function() {
      this.$http.get('/api/agenda-items/2/mover').then(function(response){
        this.mover = response.json()
      }.bind(this));

      this.$http.get('/api/agenda-items/2/seconder').then(function(response){
        this.seconder = response.json()
      }.bind(this));
    }
  })  
</script>