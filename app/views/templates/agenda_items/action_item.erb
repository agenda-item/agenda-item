<template id="action-item-template">
  <div class="ai-action-item" v-if="agendaItem.type === 'Action Item'">
    <div class="ai-responsible">
      <label class="label">Responsible Board Member(s)</label>
      <div class="ai-user"><i class="fa fa-person" aria-hidden="true">{{agendaItem.creator.first_name}}</i></div>
      <br/>
      <responsible-users-modal :agenda-item.sync="agendaItem">
      </responsible-users-modal>
    </div>
    <div class="ai-date-time">
      <div class="control">
        <label class="label">Due Date</label>
        <input class="input" type="date" placeholder="agendaItem.due_date" name="due_date">
      </div>
    </div>
    <div class="ai-status">
      <label class="label">Status</label>
      <p class="control">
        <span class="select">
          <select name="status" v-model="agendaItem.status">
            <option >Select status</option>
            <option value="Active">Active</option>
            <option value="Carried Forward">Carried Forward</option>
            <option value="Completed">Completed</option>
          </select>
        </span>
      </p>
    </div>
  </div>
</template>



<script>
  Vue.component('action-item', {
    template: '#action-item-template',
    props: ['agendaItem'],
    }
  })
</script>
